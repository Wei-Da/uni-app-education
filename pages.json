{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/homepage/homepage",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/discover/discover",
			"style": {
				"navigationBarTitleText": "发现",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/study/study",
			"style": {
				"navigationBarTitleText": "学习",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false
			}

		}
	],
	"subPackages": [{
		"root": "star-teacher",
		"pages": [{
			"path": "star-teacher/star-teacher",
			"style": {
				"navigationBarTitleText": "明星老师",
				"enablePullDownRefresh": false
			}
		}]
	}, {
		"root": "course-list",
		"pages": [{
			"path": "course-list/course-list",
			"style": {
				"navigationBarTitleText": "分类",
				"enablePullDownRefresh": false
			}
		}]
	}, {
		"root": "course-details",
		"pages": [{
			"path": "course-details/course-details",
			"style": {
				"navigationBarTitleText": "课程详情",
				"enablePullDownRefresh": false
			}
		}]
	}],
	"preloadRule": {
		"star-teacher/star-teacher/star-teacher": {
			"network": "all",
			"packages": ["__APP__"]
		},
		"course-list/course-list/course-list": {
			"network": "all",
			"packages": ["__APP__"]
		},
		"course-details/course-details/course-details": {
			"network": "all",
			"packages": ["__APP__"]
		}
	},
	"globalStyle": {
		"navigationStyle": "default",
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#f5f5f5",
		"autoscan": true,
		"h5": {
			"maxWidth": 600,
			"navigationStyle": "custom"
		}

	},
	"tabBar": {
		"backgroundColor": "#FFFFFF",
		"borderStyle": "black",
		"selectedColor": "#5d2ec4",
		"color": "#999999",
		"list": [{
			"pagePath": "pages/homepage/homepage",
			"iconPath": "static/images/homepage-icon.png",
			"selectedIconPath": "static/images/homepage-select-icon.png",
			"text": "首页"
		}, {
			"pagePath": "pages/discover/discover",
			"iconPath": "static/images/discover-icon.png",
			"selectedIconPath": "static/images/discover-select-icon.png",
			"text": "发现"
		}, {
			"pagePath": "pages/study/study",
			"iconPath": "static/images/study-icon.png",
			"selectedIconPath": "static/images/study-select-icon.png",
			"text": "学习"
		}, {
			"pagePath": "pages/mine/mine",
			"iconPath": "static/images/mine-icon.png",
			"selectedIconPath": "static/images/mine-select-icon.png",
			"text": "我的"
		}]
	}
}
